package objects;

public class Square {
    public static double getArea(double length) {
        
        double value;
        value = length * length;

        return value;

        // Everything can be sinplified down to
        return Math.pow(length, 2);
    }
}

// How to test code

// It is good practice to test code in a new class instead of the same class in order to keep everything the same

