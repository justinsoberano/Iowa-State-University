// Introduction to objects

package objects;

public class StringExamples {
    public static void main(String args[]) {
        String noName = "";
        String bobsName = "Bob";
        String greeting = "Hello, World";
        
        // How to call a method with respect to the object
        bobsName.length();

        System.out.println("No name is length " + noName.length()); // returns 0
        System.out.println("Bobs name is length " + bobsName.length()); // returns 3

        bobsName.charAt(0); // returns letter 'B'
        bobsName.charAt(2); // returns letter 'b'

        bobsName.toUpperCase(); // will make the whole name uppercase
        bobsName.indexOf('o') // retuern the index of 'o'

        greeting.substring(0,7) // will print out 'Hello, ' * The last number is not inclusive but up to index location 7

        greeting.substring(0, greeting.indexOf('W')) // the index of W is 7, so it will do the same thing


    }
}